version: '3.8'

services:
  postgres:
    image: postgres:15-alpine
    container_name: finopsmind-postgres
    environment:
      POSTGRES_USER: finopsmind
      POSTGRES_PASSWORD: ${DB_PASSWORD:-finopsmind_secret}
      POSTGRES_DB: finopsmind
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./backend/migrations:/docker-entrypoint-initdb.d:ro
    ports:
      - "5432:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U finopsmind"]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7-alpine
    container_name: finopsmind-redis
    command: redis-server --appendonly yes
    volumes:
      - redis_data:/data
    ports:
      - "6379:6379"
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: finopsmind-backend
    environment:
      - SERVER_HOST=0.0.0.0
      - SERVER_PORT=8080
      - DB_HOST=postgres
      - DB_PORT=5432
      - DB_USER=finopsmind
      - DB_PASSWORD=${DB_PASSWORD:-finopsmind_secret}
      - DB_NAME=finopsmind
      - DB_SSL_MODE=disable
      - REDIS_HOST=redis
      - JWT_SECRET=${JWT_SECRET:-change-me-in-production}
      - ML_SIDECAR_URL=http://ml-sidecar:8000
      - ML_SIDECAR_ENABLED=true
      - AWS_ENABLED=${AWS_ENABLED:-false}
      - AWS_REGION=${AWS_REGION:-us-east-1}
      - AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID:-}
      - AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY:-}
    ports:
      - "8080:8080"
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy

  ml-sidecar:
    build:
      context: ./ml-sidecar
      dockerfile: Dockerfile
    container_name: finopsmind-ml-sidecar
    environment:
      - PORT=8000
      - LOG_LEVEL=INFO
    ports:
      - "8000:8000"

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: finopsmind-frontend
    ports:
      - "3000:80"
    depends_on:
      - backend

volumes:
  postgres_data:
  redis_data:
