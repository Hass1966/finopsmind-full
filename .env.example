# FinOpsMind Configuration
# Copy to .env and update values

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=finopsmind
DB_PASSWORD=your-secure-password-here
DB_NAME=finopsmind
POSTGRES_USER=finopsmind
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=finopsmind
DATABASE_URL=postgres://finopsmind:your-secure-password-here@postgres:5432/finopsmind?sslmode=disable

# Authentication
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars

# Encryption (required for storing cloud credentials securely)
ENCRYPTION_KEY=generate-a-random-32-char-string-here

# Server
PORT=8080

# ML Sidecar
ML_SIDECAR_URL=http://ml-sidecar:8081

# Redis
REDIS_URL=redis://redis:6379

# Frontend
REACT_APP_API_URL=http://localhost:8080/api/v1

# ============================================
# AWS Integration
# ============================================
# Required permissions: ce:GetCostAndUsage, ce:GetRightsizingRecommendation,
#   ce:GetReservationPurchaseRecommendation, ce:GetSavingsPlansPurchaseRecommendation
AWS_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
# For cross-account access (optional):
# AWS_ASSUME_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/FinOpsMindRole
# AWS_EXTERNAL_ID=your-external-id

# ============================================
# Azure Integration
# ============================================
# Requires an App Registration with Cost Management Reader role
# on the target subscription
AZURE_ENABLED=false
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_SUBSCRIPTION_ID=

# ============================================
# Notifications (optional)
# ============================================
# NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/yyy/zzz
# NOTIFICATION_EMAIL_SMTP_HOST=smtp.gmail.com
# NOTIFICATION_EMAIL_SMTP_PORT=587
# NOTIFICATION_EMAIL_FROM=alerts@yourcompany.com
# NOTIFICATION_EMAIL_PASSWORD=app-password
# NOTIFICATION_WEBHOOK_URLS=https://your-webhook.com/finops
